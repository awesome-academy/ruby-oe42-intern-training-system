<li class="<%= status_user_course user_course %>">
  <div id="course-info" class="clearfix">
    <div class="course-image-info p-2">
    <%= image_tag "https://education.sun-asterisk.vn/assets/default-course-edb1df5c743f99e3b93d19e2f2db5204f217817ec7867fdf4990134f04aa6690.png", size: "126x77", alt: "not found", class: "course_img" %>
  </div>
  <div class="course-content-info">
    <ul>
      <li>
        <h4 class="text-uppercase font-weight-bold">
          <span class="badge badge-warning"><%=  user_course.status %></span>
          <a class="text-decoration-none text-muted">
            <%= link_to user_course.name, trainee_user_course_path(user_course.id) %>
          </a>
        </h4>
      </li>
      <li class="mb-1">
        <i class="fa fa-clock"></i>
          <span>
            <strong><%= l user_course.start_date %>--></strong>
          </span>
          <i class="fa fa-long-arrow-right"></i>
          <span class="text-danger">
            <strong><%= user_course.end_date.present? ? l(user_course.end_date) : "N/A" %></strong>
          </span>
      </li>
    </ul>
  </div>
  </div>
</li>
