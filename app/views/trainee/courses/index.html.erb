<div class="container">
  <div class="row">
    <div class="col-md-9">
      <h4><%= t "courses.course_active" %></h4>
      <ul class="timeline">
        <% if @courses_active.any? %>
          <%= render @courses_active %>
        <% else %>
          <div class="alert alert-danger"><%= t "courses.no_course_active" %></div>
        <% end %>
      </ul>
      <h4><%= t "courses.course_joined" %></h4>
      <ul class="timeline">
        <% if @courses_joined.any? %>
          <%= render @courses_joined %>
        <% else %>
          <div class="alert alert-danger"><%= t "courses.no_course_joined" %></div>
        <% end %>
      </ul>
    </div>
  </div>
</div>
